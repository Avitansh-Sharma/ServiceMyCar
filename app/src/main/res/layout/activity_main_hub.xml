<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#71b6e0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.avitansh.servicemycar.MainHub">



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/Hello">

        <Button
            android:id="@+id/newCar"
            android:text="\n\n\n\nNew Car"
            android:layout_row="0"
            android:background="@mipmap/car_button"
            android:layout_column="0"
            android:onClick="goToNewCar"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <Button
            android:id="@+id/newService"
            android:background="@mipmap/screwdriver2"
            android:onClick="goToNewServices"
            android:layout_marginStart="45dp"
            android:text="\n\n\n\nNew Service"
            android:layout_marginLeft="45dp"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:id="@+id/button4"
            android:layout_marginTop="100dp"
            android:layout_row="1"
            android:onClick="viewCars"
            android:text="\n\n\n\n\nView Services"
            android:background="@mipmap/view_cars"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:layout_marginTop="140dp"
            android:id="@+id/button5"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:id="@+id/button6"
            android:layout_marginTop="140dp"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:id="@+id/button7"
            android:layout_marginTop="120dp"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:id="@+id/newGas"
            android:background="@mipmap/gasstation"
            android:text="\n\n\n\nNew Gas"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:layout_marginTop="120dp"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:layout_marginTop="120dp"
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="3" />

    </GridLayout>

</RelativeLayout>
