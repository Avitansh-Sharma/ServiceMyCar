<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#71b6e0"
    android:layout_height="match_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="650dp" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.avitansh.servicemycar.New_Service">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select A Car:"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerAllCars"
        android:background="@drawable/back"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date Of Service:"
        android:id="@+id/textView8"
        android:layout_below="@+id/spinnerAllCars" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:id="@+id/ButtonDate"
        android:background="@drawable/colorbutton"
        android:layout_below="@+id/textView8"
        android:layout_alignRight="@+id/spinnerAllCars"
        android:onClick="getDate"
        android:layout_alignEnd="@+id/spinnerAllCars"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type Of Service:"
        android:id="@+id/textView9"
        android:layout_below="@+id/ButtonDate" />
    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTypeOfService"
        android:background="@drawable/back"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notes:"
        android:id="@+id/textView10"
        android:layout_below="@+id/spinnerTypeOfService" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignParentRight="true"
        android:background="@drawable/back"
        android:hint="Miles on Car, Location of Service etc..."
        android:layout_alignParentEnd="true"
        android:id="@+id/editTextnotes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:id="@+id/button"
        android:background="@drawable/colorbutton"

        android:layout_alignParentBottom="true"
        android:onClick="goBacktoMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button2"
        android:onClick="registerNewService"
        android:background="@drawable/colorbutton"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
         />

</RelativeLayout>
</ScrollView>